{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "output_API.schema",
  "title": "Pipeline output_API.JSON schema",
  "type": "object",
  "description": "Schema for pipeline's output_API.JSONs",
  "additionalProperties": {
    "type": "array",
    "items": {
      "type": "object",
      "properties": {
        "file_path_template": {
          "description": "jinja-ish like template string, that describes where CLI tool expects a  pipeline result file",
          "type": "string"
        },
        "filter_hierarchy": {
          "description": "path-like string, used in UI for nested facet filters",
          "type": "string"
        },
        "inline_short_desc": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "detail_level": {
          "description": "TBD",
          
          "type": "string",
          "enum": [
            "Summary file",
            "Analysis-Ready file",
            "Intermediate file",
            "Source file"
          ]
        }
      }
    }
  }
}

